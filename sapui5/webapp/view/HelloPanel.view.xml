<mvc:View
    controllerName="logaligroup.sapui5.controller.HelloPanel"
    xmlns:mvc="sap.ui.core.mvc"
    displayBlock="true"
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
>

    <Panel 
            headerText="{i18n>helloPanel}" 
            class="sapUiResponsiveMargin"
            width="auto"
            expandable="{device>/system/phone}"
            expanded="{= !${device>/system/phone} }">
        <content>
            <Button id="helloDialogButton"
                    text="{i18n>helloDialogBut}" 
                    press="onOpenDialog" 
                    class="sapUiSmallMarginEnd sapUiVisibleOnlyOnDesktop"
                    icon="sap-icon://action"/>
            <Button text="{i18n>showHelloButton}" press="onShowHello" class="sapUiSmallMarginEnd sapUiHideOnDesktop"></Button>
            <Input value="{/recipient/name/}" 
                    description=""
                    width="60%"
                    valueLiveUpdate="true"></Input>
            <Text text="Hello {/recipient/name/}" class="sapUiSmallMargin boldElements"></Text>
        </content>
    </Panel>
    <core:Fragment fragmentName="logaligroup.sapui5.view.Form01" type="XML"/>
</mvc:View>